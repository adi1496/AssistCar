<header class="header">
            <img src="img/logo.png" alt="logo" class="header__logo">
            <div class="header__notification">
                <svg class="header__icon">
                    <use xlink:href="img/svg/notifications.svg#icon-bell"></use>
                </svg>
                <svg class="header__icon header__icon--small--red">
                    <use xlink:href="img/svg/notifications.svg#icon-warning"></use>
                </svg>
            </div>
            <div class="header__add-car">
                <svg class="header__icon">
                    <use xlink:href="img/svg/notifications.svg#icon-automobile"></use>
                </svg>
                <svg class="header__icon header__icon--small">
                    <use xlink:href="img/svg/notifications.svg#icon-plus"></use>
                </svg>
            </div>
            <div class="header__user">
                <img src="img/users/user-adi.jpg" alt="" class="header__user-photo">
                <p class="header__user-name">Adrian</p>
            </div>
        </header>
    
            <div class="{%nav%}">
                <ul class="{%nav%}__list navigation__list--overview-user">
                    <li class="{%nav%}__item" id="overview"><a href="#overview" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-tv"></use>
                        </svg>
                        <span>Overview</span>
                    </a></li>
                    <li class="{%nav%}__item" id="account-info"><a href="#account-info" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-account_box"></use>
                        </svg>
                        <span>Account info</span>
                    </a></li>
                    <li class="{%nav%}__item" id="car-documents"><a href="#car-documents" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-file-text"></use>
                        </svg>
                        <span>Car documents</span>
                    </a></li>
                    <li class="{%nav%}__item" id="call-assistance"><a href="#call-assistance" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-phone"></use>
                        </svg>
                        <span>Call assistance</span>
                    </a></li>
                    <li class="{%nav%}__item" id="service-apointment"><a href="#service-apointment" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-phone"></use>
                        </svg>
                        <span>service apointment</span>
                    </a></li>
                    <li class="{%nav%}__item"><a href="https://www.carvertical.com/" class="{%nav%}__link">
                        <svg class="{%nav%}__icon">
                            <use xlink:href="img/svg/nav-bar.svg#icon-history"></use>
                        </svg>
                        Check car history
                    </a></li>
                </ul>
    
                <div class="{%legal%}">&copy; 2020 by <a href="#" class="{%legal%}__link">Adrian Matei</a>. All rights reserved.</div>
            </div>
    
            <div class="content-account">
                <div class="gallery">
                    <figure class="gallery__item">
                        <img src="img/car-assist.jpg" alt="Gallery photo 1" class="gallery__photo">
                        <div class="gallery__cover"></div>
                    </figure>
    
                    <figure class="gallery__item">
                        <img src="img/car-docs.jpg" alt="Gallery photo 2" class="gallery__photo">
                        <div class="gallery__cover"></div>
                    </figure>
    
    
                    <figure class="gallery__item">
                        <img src="img/car-repair.jpg" alt="Gallery photo 3" class="gallery__photo">
                        <div class="gallery__cover"></div>
                    </figure>
                </div>
    
                <div class="details--account">
                    <ul class="profile-nav">
                        <li class="profile-nav__item">
                            <svg class="profile-nav__icon">
                                <use xlink:href="img/svg/profile.svg#icon-edit"></use>
                            </svg>
                            <a href="#edit-profile" class="profile-nav__link profile-nav__link--active" id="edit-profile">
                            Edit Profile
                            <svg class="profile-nav__icon2 profile-nav__icon2--active">
                                <use xlink:href="img/svg/profile.svg#icon-chevron-right"></use>
                            </svg>
                        </a></li>
                        <li class="profile-nav__item">
                            <svg class="profile-nav__icon">
                                <use xlink:href="img/svg/profile.svg#icon-lock"></use>
                            </svg>
                            <a href="#password-security" class="profile-nav__link profile-nav__link--border" id="password-security">
                            Password and security
                            <svg class="profile-nav__icon2">
                                <use xlink:href="img/svg/profile.svg#icon-chevron-right"></use>
                            </svg>
                        </a></li>
                        <li class="profile-nav__item">
                            <svg class="profile-nav__icon">
                                <use xlink:href="img/svg/profile.svg#icon-flow-tree"></use>
                            </svg>
                            <a href="#choose-plan" class="profile-nav__link profile-nav__link--border" id="choose-plan">
                            Choose Plan
                            <svg class="profile-nav__icon2">
                                <use xlink:href="img/svg/profile.svg#icon-chevron-right"></use>
                            </svg>
                        </a></li>
                        <li class="profile-nav__item">
                            <svg class="profile-nav__icon">
                                <use xlink:href="img/svg/profile.svg#icon-bell"></use>
                            </svg>
                            <a href="#notifications" class="profile-nav__link profile-nav__link--border2" id="notifications">
                            Notifications
                            <svg class="profile-nav__icon2">
                                <use xlink:href="img/svg/profile.svg#icon-chevron-right"></use>
                            </svg>
                        </a></li>
                    </ul>
    
                    <div class="profile-settings">
                        <h4 class="profile-settings__title">Edit Profile</h4>
                        <figure class="profile-settings__photo">
                            <img src="img/users/user-adi.jpg" alt="profile avatar" class="profile-settings__img">
                        </figure>
    
                        <div class="profile-settings__box">
                            <label for="first-name" class="profile-settings__label">First Name</label>
                            <input type="text" class="profile-settings__input" id="first-name">
                        </div>
                        <div class="profile-settings__box">
                            <label for="last-name" class="profile-settings__label">Last Name</label>
                            <input type="text" class="profile-settings__input" id="last-name">
                        </div>
    
                        <div class="profile-settings__box profile-settings__box--2col">
                            <label for="email" class="profile-settings__label">E-mail</label>
                            <input type="email" class="profile-settings__input" id="email">
                        </div>
                        <div class="profile-settings__box profile-settings__box--2col">
                            <label for="phone" class="profile-settings__label">Phone Number</label>
                            <input type="number" class="profile-settings__input" id="phone">
                        </div>
    
                        <div class="profile-settings__box profile-settings__box--2col">
                            <label for="address" class="profile-settings__label">Adress</label>
                            <input type="text" class="profile-settings__input" id="address">
                        </div>
                        <div class="profile-settings__box">
                            <label for="city" class="profile-settings__label">City</label>
                            <input type="text" class="profile-settings__input" id="city">
                        </div>
                        <div class="profile-settings__box">
                            <label for="state" class="profile-settings__label">State / County</label>
                            <input type="text" class="profile-settings__input" id="state">
                        </div>
                        <div class="profile-settings__box">
                            <label for="zip-code" class="profile-settings__label">Zip-Code</label>
                            <input type="text" class="profile-settings__input" id="zip-code">
                        </div>
                        <div class="profile-settings__box">
                            <label for="country" class="profile-settings__label">Country</label>
                            <input type="text" class="profile-settings__input" id="country">
                        </div>
    
                        <button class="btn-save">Save</button>
                    </div>
                </div>
    
            </div>