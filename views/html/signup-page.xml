<header class="header">{%header%}</header>
    
<div class="navigation-log-sign">{%navigation-menu%}</div>
    
<div class="content-log-sign">
    <div class="details--log-sign">
        <div class="log-sign">
            <div class="log-sign__greeting">
                <h2 class="log-sign__heading">Glad to see you!</h2>
                <p class="log-sign__text-greeting">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Harum iste dolor autem tempore perspiciatis numquam eligendi.</p>
            </div>

            <form class="log-sign__form">
                <h3 class="log-sign__title">Hello, friend!</h3>
                <div class="log-sign__box">
                    <label for="first-name" class="log-sign__label">First Name</label>
                    <input type="text" class="log-sign__input" id="first-name">
                </div>
                <div class="log-sign__box">
                    <label for="last-name" class="log-sign__label">Last Name</label>
                    <input type="text" class="log-sign__input" id="last-name">
                </div>

                <div class="log-sign__box log-sign__box--2col">
                    <label for="email" class="log-sign__label">E-mail</label>
                    <input type="email" class="log-sign__input" id="email">
                </div>

                <div class="log-sign__box log-sign__box--2col">
                    <label for="password" class="log-sign__label">Password</label>
                    <input type="password" class="log-sign__input" id="password">
                </div>

                <div class="log-sign__box log-sign__box--2col">
                    <label for="confirmPassword" class="log-sign__label">Confirm Password</label>
                    <input type="password" class="log-sign__input" id="confirmPassword">
                </div>

                <div class="log-sign__box log-sign__box--checkBox">
                    <input class="log-sign__checkBox" type="checkbox" name="isCompany" id="isCompany"/>
                    <label class="log-sign__label" for="isCompany">Is it your account a company account?</label>
                </div>

                <button class="btn-sign-log u-margin-top-medium" id="signupBtn">Sign Up</button>
                <div class="log-sign__toggle-log-sign">Already have an account? Then 
                    <a href="/login" class="log-sign__toggle-link">Log in</a>
                </div>
            </form>
        </div>
    </div>
</div>